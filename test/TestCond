Var i;
Var j;
Var distance;
Var angle;

Debut

j = -1;
i = 10;
distance = 110;
angle = 360 / i;

Tourne -75;
Avance 500;

BasPinceau;
Tant que i Faire
     Debut
	i = i - 1;

	Avance distance;
	Si j - 1 Alors
	   Debut
		(* On dessine un carr√© *)
		Tourne -(90 - angle);
		Avance distance / 4;
		Tourne -90;
		Avance distance / 4;
		Tourne -90;
		Avance distance / 4;
		Tourne -90;
		Avance distance / 4;
		Tourne -(360 - 2 * angle);
	   Fin
	Sinon
	   Tourne -angle;
	j = j * -1;
      Fin;
Fin