(* Programme pour dessiner un polygone régulier *)
Var i;
Var distance;
Var angle;

Debut


i = 15; //i est le nombre de côtés
distance = 110;
angle = 360 / i;

Tourne -75;
Avance 400;

BasPinceau;
Tant que i Faire
     Debut
	i = i - 1;
	Avance distance;
     	Tourne angle;
     Fin;
Fin
// Fin du programme